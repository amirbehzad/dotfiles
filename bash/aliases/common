# Common alias definitions

alias ll='ls -alh'
alias dir='ls -1Fa | grep "/$" | sort -f'
alias grep='grep -i --color'
alias hex='od -x'
alias df='df -kh'
alias s='ssh'
alias w='wget -c'
alias v='vim'
alias ps?='ps auxf | grep'
alias k='kill -9'
alias ..='cd ..'

# ms-dos memorial
alias cls='clear'

# typo handling
alias got='git'

# depend on ~/.my.cnf
alias m='mysql -A'
alias mo='watch --interval=1 --differences \'mysql -e "SHOW PROCESSLIST"\''

alias mem='free -m'
alias serveme='python -m SimpleHTTPServer'
